<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<nifty>
	<useStyles filename="nifty-default-styles.xml"/>
	<useControls filename="nifty-default-controls.xml"/>

	<controlDefinition name="CitizenWindow">
		<control id="#CitizenWindow" name="window" title="Citizen" width="320px" height="180px" font="aurulent-sans-16.fnt" x="80px" y="80px">	
			<panel id="#CitizenWindowPanel" controller="Nifty.CitizenWindowController" childLayout="vertical">
				<panel id="#NamePanel" childLayout="horizontal">
					<control name="label" color="#ffffffff" id="#NameLabel" height="30px" font="aurulent-sans-16.fnt" width="*" textHAlign="left" />
					<control childLayout="center" height="30px" id="#MoveToButton" label="Move To" name="button" width="70px">
						<interact onClick="moveToCitizen()"/>
					</control>
				</panel>  
				<control name="label" color="#ffffffff" id="#GenderLabel" height="30px" font="aurulent-sans-16.fnt" width="100%" textHAlign="left" />
				<control name="label" color="#ffffffff" id="#JobLabel" height="30px" font="aurulent-sans-16.fnt" width="100%" textHAlign="left" />
				<control name="label" color="#ffffffff" id="#TaskLabel" height="30px" font="aurulent-sans-16.fnt" width="100%" textHAlign="left" />
			</panel>
		</control>
	</controlDefinition>
</nifty>
