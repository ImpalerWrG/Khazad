<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<nifty>
	<useStyles filename="nifty-default-styles.xml"/>
	<useControls filename="nifty-default-controls.xml"/>

	<controlDefinition name="CitizenWindow">
		<control id="#CitizenWindow" name="window" title="Citizen" width="320px" height="150px" font="aurulent-sans-16.fnt" x="80px" y="80px">	
			<panel id="#CitizenWindowPanel" controller="Nifty.CitizenWindowController" childLayout="vertical">		
				<control name="label" color="#ffffffff" id="#NameLabel" height="30px" font="aurulent-sans-16.fnt" width="100%" textHAlign="left" />
				<control name="label" color="#ffffffff" id="#JobLabel" height="30px" font="aurulent-sans-16.fnt" width="100%" textHAlign="left" />
				<control name="label" color="#ffffffff" id="#TaskLabel" height="30px" font="aurulent-sans-16.fnt" width="100%" textHAlign="left" />
				<control childLayout="center" height="30px" id="#PopulationButton" label="Population" name="button" width="70px">
					<interact onClick="OpenPopulationPopup()"/>
				</control>
			</panel>
		</control>
	</controlDefinition>
</nifty>
